{
  "name": "ifont",
  "repository": "github:fabiospampinato/ifont",
  "description": "An isomorphic icon font generator with support for ligatures.",
  "version": "1.0.0",
  "type": "module",
  "sideEffects": false,
  "bin": "dist/bin.js",
  "main": "dist/index.js",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "benchmark": "tsex benchmark",
    "benchmark:watch": "tsex benchmark --watch",
    "clean": "tsex clean",
    "compile": "tsex compile",
    "compile:watch": "tsex compile --watch",
    "test": "node dist/bin.js preview -i test/icons/*.svg",
    "prepublishOnly": "tsex prepare"
  },
  "keywords": [
    "icon",
    "font",
    "generator",
    "isomorphic",
    "ttf",
    "ligatures"
  ],
  "dependencies": {
    "cubic2quad": "^1.2.1",
    "element-to-path": "^1.2.1",
    "microbuffer": "^1.0.0",
    "specialist": "^1.3.0",
    "svgpath": "^2.6.0",
    "tiny-open": "^1.0.0",
    "xml-simple-parser": "^1.0.0",
    "zeptoid": "^1.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.5.9",
    "benchloop": "^2.1.1",
    "tsex": "^3.0.1",
    "typescript": "^5.2.2"
  }
}
